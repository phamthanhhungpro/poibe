{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "Routes": {
      "poi-id-route": {
        "ClusterId": "poi-id-cluster",
        "Match": {
          "Path": "/id/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "poi-hrm-route": {
        "ClusterId": "poi-hrm-cluster",
        "Match": {
          "Path": "/hrm/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "poi-id-cluster": {
        "Destinations": {
          "destination1": {
            "Address": " http://localhost:5193"
          }
        }
      },
      "poi-hrm-cluster": {
        "Destinations": {
          "destination1": {
            "Address": " https://localhost:7181"
          }
        }
      }
    }
  }
}
